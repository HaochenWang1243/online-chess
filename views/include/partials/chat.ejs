<button class="chat-container open-chat" id="open-chat">
    <!-- src paths should be relative to the express.static() dir, which in this case is the public folder -->
    <img src="/assets/icons/chat.svg" alt="">
</button>

<div class="chat-container chat" id="chat">
    <ul class="messages" id="messages"></ul>
    
    <form action="" id="chat-form" class="chat-form">
        <input type="text" id="message-input"> 
        <button>SEND</button>
    </form>

    <span class="close-chat" id="close-chat">&#x2715;</span>
</div>

